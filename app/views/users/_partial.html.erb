<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %> 
        <div class="form-group row">
            <%= f.label :username, class: "col-2 col-form-label text-light" %><br>
            <div class="col-10">
              <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username"  %>
            </div>   
        </div>

        <div class="form-group row mt-3">
            <%= f.label :email, class: "col-2 col-form-label text-light" %><br>
            <div class="col-10">
              <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter a valid email" %>
            </div>     
        </div>

        <div class="form-group row mt-3">
            <%= f.label :password, class: "col-2 col-form-label text-light" %><br>
            <div class="col-10">
              <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter a password" %>
            </div>     
        </div>

        <div class="form-group row justify-content-center mt-2">
          <div class="text-center">
            <%= f.submit "Sign up", :class => "btn btn-outline-light btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mb-5 text-center">
      <%= link_to '[ Cancel and return to articles listing ]', users_path, class: "text-info" %>
    </div>
  </div>
</div>